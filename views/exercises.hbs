{{!-- <h1 class="title">Exercises</h1> --}}
{{!-- <hr> --}}
<div class="exercise-container">
    <form id="filter-form">
        <ul>
            <li class="tag-list-item">
                <input name="filterLevel" value="Beginner" type="checkbox" class="checkbox" />
                <label for="Beginner">BEGINNER</label>
            </li>
            <li class="tag-list-item">
                <input name="filterLevel" value="Intermediate" type="checkbox" class="checkbox" />
                <label for="Intermediate">INTERMEDIATE</label>
            </li>
            <li class="tag-list-item">
                <input name="filterLevel" value="Advanced" type="checkbox" class="checkbox" />
                <label for="Advanced">ADVANCED</label>
            </li>
            <li class="tag-list-item">
                <input name="filterBodyPart" value="Upper body" type="checkbox" class="checkbox" />
                <label for="Upper body">UPPER BODY</label>
            </li>
            <li class="tag-list-item">
                <input name="filterBodyPart" value="Lower body" type="checkbox" class="checkbox" />
                <label for="Lower body">LOWER BODY</label>
            </li>
            <li class="tag-list-item">
                <input name="filterBodyPart" value="Full body" type="checkbox" class="checkbox" />
                <label for="Full body">FULL BODY</label>
            </li>
        </ul>
    </form>
    <form method="post" action="/exercises" id="form-create-program">
    <h2>Create your program</h2>
    <div>
      <label for="programName">Your program name</label>
      <input id="programName" type="text" name="programName"
        required>
    </div>
    <div>
      <label for="programDescription">Description</label>
      <input id="programDescription" type="text"  required name="programDescription">
    </div>
    <button id="create-program-btn">Create your program with the selected exercises</button>
    </form>
    <ul class="exoList" id="exoList">
        {{#each exercises}}
        <li class="exercise">
            <p>{{this.name}} <input name="favourite" value="{{this._id}}" type="checkbox" class="checkbox" />
      <label for="favourite">favourite</label></p>
            <p>{{this.description}}</p>
            <p>{{this.level}}</p>
            <p>{{this.bodyPart}}</p>
            <iframe width="420" height="315" src={{this.exerciseUrl}}>
            </iframe>
            {{!-- <a class="link" href="/exercises/page/{{this._id}}">... see more</a> --}}
        </li>
        {{/each}}
    </ul>
</div>